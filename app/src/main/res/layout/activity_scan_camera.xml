<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F3fafe"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tinhlam.tvshop.activity.ScanCameraActivity">


    <LinearLayout
        android:background="#F3fafe"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#01548E"
            android:textColor="#fcfafa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_blog_url"
            android:text="@string/btn_scan_now"
            android:layout_centerHorizontal="true"
            android:onClick="scanNow"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/btn_scan_now" />
        <Button
            android:background="#01548E"
            android:textColor="#fcfafa"
            android:id="@+id/btntrove"
            android:text="Trở về"

            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/scan_format"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="0sp"
            android:textColor="@android:color/transparent"


            android:textIsSelectable="true"
            android:layout_below="@+id/btn_scan_now"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
        <TextView
            android:textSize="0sp"
            android:textColor="@android:color/transparent"
            android:id="@+id/scan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_below="@+id/scan_format"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal" />


    </LinearLayout>


    <LinearLayout
        android:background="#F3fafe"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#01548E"
            android:layout_margin="5dp"
            android:text="Kết quả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listviewmanhinhkq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@android:id/empty"
            android:textColor="#01548E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_list" />

    </LinearLayout>




</LinearLayout>
